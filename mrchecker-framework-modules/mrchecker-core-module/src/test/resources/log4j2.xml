<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Routing name="RoutingApp">
        <Routes pattern="$${ctx:threadName}">
            <Route>
                <File fileName = "logs/${ctx:threadName}.log"
                      name="${ctx:threadName}">
                    <PatternLayout>
                        <Pattern>%d{yyyy-MM-dd 'at' HH:mm:ss z} %BFLL - %m%n</Pattern>
                        <!--                            <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg</Pattern>-->
                    </PatternLayout>
                </File>
            </Route>

        </Routes>
    </Routing>
        <Routing name="RoutingAppENV">
            <Routes pattern="$${ctx:threadName}">
                <Route>
                    <File fileName = "logs/${ctx:threadName}_env.log"
                          name="${ctx:threadName}_env">
                        <ThresholdFilter level="DEBUG" onMatch="DENY" onMismatch="ACCEPT" />
                        <PatternLayout>
                            <Pattern>%d{yyyy-MM-dd 'at' HH:mm:ss z} %BFLL - %m%n</Pattern>
                            <!--                            <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg</Pattern>-->
                        </PatternLayout>
                    </File>
                </Route>

            </Routes>
        </Routing>
        <Console name="Console" target="SYSTEM_OUT">
<!--            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd 'at' HH:mm:ss z} %BFLL - %m</Pattern>
                <!--                            <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg</Pattern>-->
            </PatternLayout>
        </Console>
        <!--        <File name="LogFile" fileName="t.log">-->
        <!--            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
        <!--        </File>-->
    </Appenders>
    <Loggers>
        <Logger name="thread" additivity="false" level="ALL">
<!--            <AppenderRef ref="Console"/>-->
            <AppenderRef ref="RoutingApp"/>
            <AppenderRef ref="RoutingAppENV"/>
        </Logger>
        <Root level="ALL">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
